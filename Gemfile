source 'https://rubygems.org'

gem 'rake'
gem 'pg', '~> 0.15'
gem 'rails', '~> 4.2.5', '>= 4.2.5.1'
gem 'responders', '>= 2.1.1'

# See https://github.com/rails/execjs#readme for more supported runtimes
gem 'therubyracer'
gem 'sass-rails', '>= 5.0.4'
gem 'uglifier'
gem 'coffee-rails', '>= 4.1.1'
gem 'bower-rails'
gem 'requirejs-rails'  , '>= 1.0.0' # XXX requirejs-rails is kinda broken atm, see config/production and https://github.com/jwhitley/requirejs-rails/issues/257

# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder', '~> 2.0'

gem 'sdoc'

# CAUTION gems are in this group for a reason!
group :development, :test do
  gem 'byebug', require: 'byebug/core'
  gem 'coffee-script-source'
end

group :development do
  gem 'rspec-rails', '>= 3.4.0'
  # Spring speeds up development by keeping your application running in the background. Read more: https://github.com/rails/spring
  gem 'spring'
  gem 'web-console', '>= 3.1.1'

  gem 'guard-rails'
  gem 'guard-rdoc'
  gem 'guard-bundler'
end
